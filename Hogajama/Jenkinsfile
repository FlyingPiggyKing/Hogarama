#!groovyâ€‹

pipeline {
   
    agent any
   
    triggers {
        pollSCM 'H/1 * * * *'
        //funktioniert nicht???
    }
   
    tools {
        maven 'Maven 3.3.9'
        jdk 'openjdk 1.8.0'
    }
   
    stages {
       
        stage('Checkout und Validierung') {
            steps {
               
                echo "PATH = ${PATH}"
                echo "M2_HOME = ${M2_HOME}"
                checkout scm
            }
        }
       
        
        stage('Build Hogarama') {
            steps {
				sh "java -version"
				sh "which java"
                sh "mvn clean test"
            }//end steps
            post {
                always {
                    junit "**/surefire-reports/*.xml"
                }
            }//end post
        }//end stage Build Hogarama
    }//end stages
}//end Pipeline