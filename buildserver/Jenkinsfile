def mavenImage = '${env.JENKINS_SLAVE_IMAGE_MAVEN}'

podTemplate(cloud: 'openshift', label: 'test_pod', containers: [
  containerTemplate(name: 'maven_container', image: 'gdhet/hogarama-jenkins-slave-maven-rhel7-docker:3.5.0-jdk-8u144b01')],
  volumes: [persistentVolumeClaim(mountPath: '/.m2/repository', claimName: 'maven-repo', readOnly: false)]) {

  node('test_pod') {
    stage('build') {
      git '${env.HOGARAMA_GIT_URL}'
      container('maven_container') {
          sh 'mvn clean install'
      }
    }
  }
}
