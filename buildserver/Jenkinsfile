podTemplate(cloud: 'openshift', label: 'testPod', containers: [
  containerTemplate(name: 'maven', image: '${env.JENKINS_SLAVE_IMAGE_MAVEN}', ttyEnabled: true, command: 'cat')],
  volumes: [persistentVolumeClaim(mountPath: '/.m2/repository', claimName: 'maven-repo', readOnly: false)]) {

  node('testPod') {
    stage('build') {
      container('maven') {
          sh 'echo "FROM Jenkinsfile" &&  mvn clean install'
      }
    }
  }
}
